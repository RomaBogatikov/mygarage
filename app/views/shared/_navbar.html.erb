<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li><%= link_to 'MyGarageApp', root_path %></li>
      <% if current_user %>
        <div class="welcome"><span>Welcome, <%= current_user.name %></span><div>
      <% end %>
    </ul>
  </div>

  <div class="top-bar-right">
    <ul class="menu">
      <% if current_user %>
        <li><%= link_to "My garage", user_cars_path(user_id: current_user.id) %></li>
        <li><%= link_to "Log Out", logout_path %></li>
      <% else %>
        <li><%= link_to "Sign Up", signup_path %></li>
        <li><%= link_to "Log In", login_path %></li>
      <% end %>
    </ul>
  </div>
</div>



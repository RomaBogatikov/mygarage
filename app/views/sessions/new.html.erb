<div class="message">
  <p id="alert"><%= alert %></p>

  <h1>Login</h1>




  <%= form_tag sessions_path do |form|%>
    <form data-abide novalidate>
      <div data-abide-error class="alert callout" style="display: none;">
        <p><i class="fi-alert"></i> There are some errors in your form.</p>
      </div>

      <div class="grid-container">
        <div class="grid-x grid-margin-x">

          <div class="cell small-12">
            <label>Email
              <input type="email" placeholder="guest@guest.com" aria-describedby="example1Hint2" aria-errormessage="example1Error2" required id="email" name="email">

            </label>

          </div>

          <div class="cell small-12">
            <label>Password
              <input type="password" placeholder="123" aria-describedby="example1Hint3" aria-errormessage="example1Error3" required id="password" name="password">

            </label>

          </div>

          <fieldset class="cell large-12">
            <button class="button" type="submit" value="Log In">Log In</button>
          </fieldset>

      <span class="back"><%= link_to '<-BACK', root_path %></span>
        </div>
      </div>



    </form>
  <% end %>

</div>
